    "hover.floatConfig": {
        "border": true
    },

	"suggest.noselect": true,
    "suggest.labelMaxLength": 50,
    "suggest.defaultSortMethod": "length",
    "suggest.enablePreselect": false,
    "suggest.detailField": "preview",
    "suggest.floatConfig": {
        "border": true
    },
    "suggest.completionItemKindLabels": {
        "class": " ",
        "color": " ",
        "constant": " ",
