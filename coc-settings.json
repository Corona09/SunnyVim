    "snippets.ultisnips.pythonPrompt": false,
    "snippets.ultisnips.directories": [
        "UltiSnips"
    ],

    "diagnostic.errorSign": "",
    "diagnostic.warningSign": "",
    "diagnostic.infoSign": "",
    "diagnostic.hintSign": "󰨄",
    "diagnostic.displayByAle": false,
    "diagnostic.refreshOnInsertMode": false,
    "diagnostic.checkCurrentLine": true,
    "diagnostic.virtualTextPrefix": " ❯❯❯ ",
    "diagnostic.virtualText": false,
    "diagnostic.floatConfig": {
        "border": true
    },

    "translator.enableHover": true,
    "translator.window.enableBorder": true,
	"translator.window.maxHeight": 50,
    "translator.engines": [
        "youdao"
    ],

    "explorer.position": "left",
    "explorer.floating.position": "left-center",
	"explorer.floating.width": -30,
	"explorer.width": 30,
    "explorer.root.strategies": [
        "workspace",
        "cwd",
        "sourceBuffer",
        "reveal"
    ],
    "explorer.file.hiddenRules": {
        "extensions": [
            "o", "a", "exe", "run", "out", "obj",
			"aux", "fls", "log", "fdb_latexmk", "toc", "log", "lof", "xdv", "bbl", "blg", "nav", "snm",
			"zip", "rar", "gz", "tar", "7z",
			"pdf", "doc", "docx", "ppt", "pptx", "xls", "xlsx",
			"png", "jpg", "jpeg", "webp", "bmp", "jfif",
			"mkv", "mp4", "mov", "mp3", "m4a", "flac", "wav",
            "pyc",
			"class", "jar", "war"
        ],
        "filenames": [
			"__pycache__",
			"WPS Cloud Files"
		],
        "patternMatches": [
            "^\\.",
			"\\.synctex\\.gz$",
			"\\.run\\.xml$"
        ]
    },
    "explorer.focus": true,
    "explorer.quitOnOpen": true,
	"explorer.keyMappings.global": {
		"a": "addFile",
		"n": "addFile",
		"N": "addFile",
		"A": "addDirectory",
		"r": "rename",
		"R": "refresh",
		"?": "help",
		"<BS>": ["wait", "gotoParent"],
		".": "toggleHidden"
	},
	"explorer.icon.enableNerdfont": true,
	"explorer.icon.expanded": "",
	"explorer.icon.collapsed": "",

    "suggest.floatConfig": {
        "border": true
    },
    "diagnostic.floatConfig": {
        "border": true
    },
    "signature.floatConfig": {
        "border": true
    },
    "hover.floatConfig": {
        "border": true
    },
    "snippets.ultisnips.pythonPrompt": false
}
